<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >
    <xacro:macro name="diffbot" params="prefix robot_name">
    <xacro:include filename="$(find robot_bringup)/urdf/inertial_macros.xacro"/>

   <xacro:property name="scale_ratio" value="0.0015" />
 

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>
  <material name="gray">
        <color rgba="0.3 0.3 0.3 1"/>
    </material>
    
    <!-- BASE LINK -->

    <link name="${prefix}base_link">

    </link>

    <joint name="${prefix}base_to_footprint" type="fixed">
      <parent link="${prefix}base_footprint"/>
      <child link="${prefix}base_link"/>
      <origin xyz="0 0 0.035" rpy="0 0 0"/>
    </joint>

    <!-- ${prefix}CHASSIS LINK -->

    <joint name="${prefix}chassis_joint" type="fixed">
        <parent link="${prefix}base_link"/>
        <child link="${prefix}chassis"/>
        <origin xyz="0 -0.2 0" rpy="0 0 1.57 "/>
    </joint>

    <link name="${prefix}chassis">
        <visual>
            <origin xyz="0 0.15 -0.02" rpy="1.57 0 0"/>
            <geometry>
                <mesh scale="${scale_ratio} ${scale_ratio} ${scale_ratio}" filename="file://$(find robolaunch_cloudy_description)/urdf/meshes/body_v2.stl"/>
            </geometry>
            <material name="gray"/>
        </visual>
        <collision>
            <origin xyz="0.20 -0.1 0.075"/>
            <geometry>
                <box size="0.3 0.5 0.15"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.3" y="0.3" z="0.15">
            <origin xyz="0.15 0 0.072" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>
    <gazebo reference="${prefix}chassis">
    <material>Gazebo/DarkGrey</material>
      <mu1>0.2</mu1>
      <mu2>0.2</mu2>

    </gazebo>
    
    <!-- LEFT WHEEL LINK -->

    <joint name="${prefix}left_wheel_joint" type="continuous">
        <parent link="${prefix}base_link"/>
        <child link="${prefix}left_wheel"/>
        <origin xyz="0.11 0.14 0.048" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1"/>
    </joint>

    <link name="${prefix}right_wheel">
        <visual>
            <geometry>
                <mesh scale="${scale_ratio} ${scale_ratio} ${scale_ratio}" filename="file://$(find robolaunch_cloudy_description)/urdf/meshes/wheel_v2.stl" />
            </geometry>
            <material name="white"/>
            <origin xyz="-0.067 -0.05 -0.15" rpy="0 0 0" />

        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="${prefix}left_wheel">
    <material>Gazebo/White</material>
    </gazebo>
    <!-- RIGHT WHEEL LINK -->

    <joint name="${prefix}right_wheel_joint" type="continuous">
        <parent link="${prefix}base_link"/>
        <child link="${prefix}right_wheel"/>
        <origin xyz="0.11 -0.14 0.048" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1"/>
    </joint>

    <link name="${prefix}left_wheel">
        <visual>
            <geometry>
                <mesh scale="${scale_ratio} ${scale_ratio} ${scale_ratio}" filename="file://$(find robolaunch_cloudy_description)/urdf/meshes/wheel_v2.stl" />
            </geometry>
            <origin xyz="-0.067 -0.05 -0.15" rpy="0 0 0" />
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="${prefix}right_wheel">
    <material>Gazebo/White</material>
    </gazebo>
    </xacro:macro>
</robot>